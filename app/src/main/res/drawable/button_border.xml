<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
    <stroke
        android:width="1dp"
        android:color="#F7CBFD" />  <!-- Border color (red) and width -->
    <corners android:radius="10dp" /> <!-- Corner radius -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" /> <!-- Padding inside the border -->
</shape>

